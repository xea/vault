<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>


<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="240.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="so.blacklight.vault.fx.AuthController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Label fx:id="lblVaultPath" text="c:\vault.vlt" />
                        <Button fx:id="btnBrowseVault" mnemonicParsing="false" onAction="#browseVaultFile" text="Browse" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <GridPane fx:id="gridAuth">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Password" />
                        <Label text="One-time password" GridPane.rowIndex="1" />
                        <Label text="Private key" GridPane.rowIndex="2" />
                        <PasswordField fx:id="pwdPassword" GridPane.columnIndex="1" />
                        <PasswordField fx:id="pwdOtp" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <children>
                              <Label fx:id="lblPrivateKeyPath" text="c:\private.key" />
                              <Button fx:id="btnBrowsePrivateKey" mnemonicParsing="false" onAction="#browsePrivateKey" text="Browse" />
                           </children>
                        </HBox>
                     </children>
                  </GridPane>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox prefHeight="35.0" prefWidth="400.0">
         <children>
            <Button fx:id="btnOk" mnemonicParsing="false" onAction="#openVault" text="Ok" />
            <Button fx:id="btnQuit" mnemonicParsing="false" text="Quit" />
            <Button fx:id="btnHelp" mnemonicParsing="false" text="Help" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
