<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="so.blacklight.vault.fx.WelcomeController">
   <children>
      <Pane prefHeight="80.0" prefWidth="600.0" style="-fx-background-color: #303030;">
         <children>
            <Label layoutX="30.0" layoutY="23.0" text="Vault" textFill="WHITE">
               <font>
                  <Font name="Lucida Sans Regular" size="61.0" />
               </font>
               <effect>
                  <DropShadow color="WHITE" height="10.0" radius="4.5" width="10.0" />
               </effect>
            </Label>
         </children>
      </Pane>
      <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <TextField fx:id="txtVaultPath" promptText="Vault path" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnBrowseVault" mnemonicParsing="false" onAction="#browseVault" text="Browse" />
                     </children>
                  </HBox>
                  <PasswordField fx:id="pwdPassword" promptText="Password" />
                  <PasswordField fx:id="pwdOtp" promptText="One-time password" />
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <TextField fx:id="txtPrivateKeyPath" promptText="Private key" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnBrowseKey" mnemonicParsing="false" text="Browse" />
                     </children>
                  </HBox>
                  <Separator prefWidth="200.0" />
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Button fx:id="btnUnlockVault" mnemonicParsing="false" onAction="#unlockVault" text="Unlock" />
                        <Button fx:id="btnNewVault" mnemonicParsing="false" onAction="#createVault" text="Create new vault" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
